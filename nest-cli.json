{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "watchAssets": true,
    "assets": [
      {
        "include": "views/**/*",
        "watchAssets": true,
        "outDir": "dist/"
      },
      {
        "include": "public/**/*",
        "watchAssets": true,
        "outDir": "dist/public"
      }
    ]
  }
}